# AEGIS Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_BASE_URL=https://api.openai.com/v1

# Google/Gemini API Configuration  
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=YOUR_AZURE_OPENAI_API_KEY_HERE
AZURE_OPENAI_ENDPOINT=YOUR_AZURE_OPENAI_ENDPOINT_HERE

# Anthropic API Configuration (if using Claude)
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# GAIA Dataset Paths (optional - defaults to relative paths)
GAIA_VALIDATION_DIR=./data/gaia/2023/validation
GAIA_TEST_DIR=./data/gaia/2023/test
GAIA_SUBSET_DIR=./data/gaia_subset

# Wikimedia API Configuration (if needed)
WIKIMEDIA_API_KEY=YOUR_WIKIMEDIA_API_KEY_HERE

# WARNING: Never commit the actual .env file to version control!
# Add .env to your .gitignore file to prevent accidental commits.